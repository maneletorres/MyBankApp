<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="practicas.mibanco">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_header"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainScreen"
            android:label="@string/options_header" />
        <activity
            android:name=".NewUser"
            android:label="@string/new_user_header"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".NewTransfer"
            android:label="@string/accounts_header"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AccountsActivity"
            android:label="@string/accounts_header" />
        <activity
            android:name=".TransfersActivity"
            android:label="@string/transfers" />
        <activity
            android:name=".NewATM"
            android:label="@string/atms"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".OptionsActivity"
            android:label="@string/preferences_header" />
    </application>

</manifest>